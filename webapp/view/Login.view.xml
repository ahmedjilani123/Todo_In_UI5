<mvc:View
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    controllerName="td.mastertodo.controller.Login"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="login"
        showHeader="true"
        title="Login"
        class="sapUiContent"
        floatingFooter="true"
        titleAlignment="Center" backgroundDesign="List"
    >
    <footer>
    <OverflowToolbar >
    <ToolbarSpacer ></ToolbarSpacer>
    <Button text="Submit" press="SubmitDataPress"></Button>
    </OverflowToolbar>
    </footer>
        <headerContent>
            <MenuButton text="Auth">
                <menu>
                    <Menu>
                        <MenuItem
                            text="LogIn"
                            icon="sap-icon://visits"
                            press="onPress"
                        >
                            <customData>
                                <core:CustomData
                                    key="target"
                                    value="p1"
                                />
                            </customData>
                        </MenuItem>
                        <MenuItem
                            text="Register"
                            icon="sap-icon://add-contact"
                            press="onPress"
                        />
                    </Menu>
                </menu>
            </MenuButton>
        </headerContent>
        <subHeader>
            <OverflowToolbar>
                <ToolbarSpacer />
                <SegmentedButton id="segmentedButtonID"
                    selectedKey="student"
                    selectionChange="SelectedGuestPress"
                >
                    <items>
                        <SegmentedButtonItem
                            text="Student"
                            key="student"
                        />
                        <SegmentedButtonItem text="Teacher" />
                    </items>
                </SegmentedButton>
                <ToolbarSpacer />
            </OverflowToolbar>
        </subHeader>
        <content>
         <HBox visible="false" alignItems="Center" alignContent="Center" width="100%" height="85%"
                justifyContent="Center" 
                backgroundDesign="Solid"
                id="LoginTFormID"
            >
                <form:SimpleForm>
                    <form:content>
                        <Label text="Teacher Name">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input />
                        <Label text="Teacher Email">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input />
                        <Label text="Teacher Password">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input />
                    </form:content>
                </form:SimpleForm>
            </HBox>
            <HBox
                justifyContent="Center"
                backgroundDesign="Solid"
                id="LoginFormIDM"  alignItems="Center" alignContent="Center" width="100%" height="85%"
            >
                <form:SimpleForm>
                    <form:content>
                        <Label text="Student Name">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input />
                        <Label text="Student Email">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input />
                        <Label text="Student Password">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input />
                    </form:content>
                </form:SimpleForm>
            </HBox>
            <HBox visible="false" id="RegisterFormID"
                class="sapUiLargeMarginTop"
                justifyContent="Center"
                backgroundDesign="Solid"
            >
                <form:SimpleForm>
                    <form:content>
                        <Label text="Student Name">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input placeholder="First Name">
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S6" />
                            </layoutData>
                        </Input>
                        <Input placeholder="Last Name">
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S6" />
                            </layoutData>
                        </Input>
                        <Label text="Date of Birth">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <DatePicker placeholder="MM/DD/YYYY" />
                        <Label text="Gender">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <RadioButtonGroup columns="8">
                            <RadioButton text="Male" />
                            <RadioButton text="Female" />
                        </RadioButtonGroup>
                        <Label text="Address">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input placeholder="Street Address">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Input>
                        <Input placeholder="Street Address 2">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Input>
                        <Input placeholder="City">
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S6" />
                            </layoutData>
                        </Input>
                        <Input placeholder="Region">
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S6" />
                            </layoutData>
                        </Input>
                        <Input placeholder="Zip Code">
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S6" />
                            </layoutData>
                        </Input>
                        <Select>
                            <layoutData>
                                <layout:GridData span="XL6 L6 M6 S6" />
                            </layoutData>
                            <items>
                                <core:Item
                                    text="India"
                                    key="IN"
                                />
                                <core:Item
                                    text="USA"
                                    key="US"
                                />
                                <core:Item
                                    text="UK"
                                    key="UK"
                                />
                            </items>
                        </Select>
                        <Label text="Email">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input placeholder="Enter Email" />
                        <Label text="Phone Number">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Input placeholder="Enter Phone No." />
                        <Label text="Program of Interest">
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Label>
                        <Select>
                            <items>
                                <core:Item text="" />
                                <core:Item
                                    text="Class 12"
                                    key="12"
                                />
                                <core:Item
                                    text="Class 11"
                                    key="11"
                                />
                                <core:Item
                                    text="B.Tech"
                                    key="BT"
                                />
                            </items>
                        </Select>
                    </form:content>
                </form:SimpleForm>
            </HBox>
        </content>
    </Page>
</mvc:View>
